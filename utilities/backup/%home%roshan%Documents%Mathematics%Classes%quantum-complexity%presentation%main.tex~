\section{Knots and Links}

\begin{frame}
    \begin{definition}[Knot]\label{def:knot}
    A \emph{knot} is an embedding $K: S^1 \hookrightarrow \R^{3}$ of a closed curve in three-dimensional space, considered up to ambient isotopy.
    \begin{figure}[H]\label{fig:a_simple_knot}
        \centering
        \begin{tikzpicture}
             \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt, domain=300:360, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
             \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt, domain=60:120, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
             \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt, domain=120:180, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
             \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt, domain=180:240, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
             \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt, domain=240:300, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
             \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt, domain=0:60, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
         \end{tikzpicture}
    \end{figure}
\end{definition}
\end{frame}

\begin{frame}
    \begin{definition}[Link]\label{def:link}
    A \emph{link} is a collection $\{K_{\lambda}\}_{\lambda \in \Lambda}: S^1 \rightrightarrows \R^{3}$ of knots.
    \begin{figure}[H]
        \centering
        \begin{tikzpicture}
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (-1.5,0) arc (180:360:1.5);
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (-1.5,0) circle (1.5);
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (1.5,0) arc (0:180:1.5);
        \end{tikzpicture}
    \end{figure}

\end{definition}
\end{frame}

