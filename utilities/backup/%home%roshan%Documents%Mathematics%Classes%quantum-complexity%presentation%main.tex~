            \draw[rsltnText,ultra thick] (-1,0)  --(1,0);
            \draw[rsltnText,ultra thick] (-1,0.5)--(1,0.5);
            \draw[rsltnText,ultra thick] (-1,1)  --(1,1);
            \draw[rsltnText,ultra thick] (-1,1.5)--(1,1.5);
