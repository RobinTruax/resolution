\begin{frame}
\begin{example}[Tricolorability]\label{ex:tricolorability}
    A \emph{tricoloring} of a knot diagram is an assignment, of each unbroken segment of the knot diagram a color (red, green, or blue), using at least two colors such that at every crossing, either all three colors appear or only one color appears.
    \begin{figure}[H]
        \centering
        \begin{tikzpicture}
            \draw[rsltnPage,double=rsltnEnvTheorem,double distance=1.6pt,line width=5pt] (-1.5,0) circle (1.5);
        \end{tikzpicture} \qquad
        \begin{tikzpicture}
            \draw[rsltnPage,double=rsltnEnvTheorem, double distance=1.6pt,line width=5pt, domain=300:360, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
            \draw[rsltnPage,double=rsltnEnvDefinition,double distance=1.6pt,line width=5pt, domain=60:100, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
            \draw[rsltnPage,double=rsltnEnvCorollary,double distance=1.6pt,line width=5pt, domain=100:180, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
            \draw[rsltnPage,double=rsltnEnvCorollary,double distance=1.6pt,line width=5pt, domain=180:220, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
            \draw[rsltnPage,double=rsltnEnvTheorem,double distance=1.6pt,line width=5pt, domain=220:300, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
            \draw[rsltnPage,double=rsltnEnvDefinition,double distance=1.6pt,line width=5pt, domain=-12:60, variable=\t,samples=200]plot ({-0.5*cos(\t)+1*cos(2*\t)}, {0.5*sin(\t)+1*sin(2*\t)});
        \end{tikzpicture}
        \caption{Tricolorability proves the trefoil cannot be unknotted.}
    \end{figure}
\end{example}
\end{frame}

\section{The Jones Polynomial}

\begin{frame}
    The Jones polynomial associates to each link a Laurent polynomial $p \in \Z\left[t^{1/2}, t^{-1/2}\right]$. 
\begin{conjecture}[Jones Polynomial Detects the Unknot]\label{con:jones_polynomial_indentifies_unknotting}
    Suppose that $K$ is a link with Jones polynomial 1. Then $K$ is the unknot.
\end{conjecture}

\begin{theorem}[Khovanov Homology Detects the Unknot]\label{thm:khovanov_homology_identifies_unknotting}
    Suppose that $K$ is a link with trivial Khovanov homology. Then $K$ is the unknot. % CITE:
\end{theorem}
\end{frame}

\begin{frame}
    \begin{definition}[Recursive Definition of the Kauffman Bracket]\label{def:recursive_definition_of_the_kauffman_bracket}
    The Kauffman bracket $\left<\cdot\right>_K$ is defined as a function on link diagrams using the \emph{base rule} $\left<U\right>_K = 1$, where $U$ is the unknot, and the following two \emph{skein relations}: 
    \begin{equation*}
        \left<
        \begin{tikzpicture}
            \useasboundingbox (-0.2,-0.1) rectangle (2.2,1);
            \draw[rsltnText,ultra thick] (0,0.5) .. controls +(1,0) and +(-1,0) .. (2,-0.5);
    
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (0,-0.5) .. controls +(1,0) and +(-1,0) .. (2,0.5);
        \end{tikzpicture}
        \right> =
        -t^{1/4}\left<
        \begin{tikzpicture}
            \useasboundingbox (-0.1,-0.1) rectangle (1.1,1);
            \draw[rsltnText,ultra thick] (0,0.5) .. controls +(0.5,-0.2) .. (1,0.5);
    
            \draw[rsltnText,ultra thick] (0,-0.5) .. controls +(0.5,0.2) .. (1,-0.5);
        \end{tikzpicture}
        \right> - 
        t^{-1/4}\left<
        \begin{tikzpicture}
            \useasboundingbox (-0.1,-0.1) rectangle (1.1,1);
            \draw[rsltnText,ultra thick] (1,-0.5) .. controls +(-0.2,0.5) .. (1,0.5);
            \draw[rsltnText,ultra thick] (0,-0.5) .. controls +(0.2,0.5) .. (0,0.5);
        \end{tikzpicture}
        \right>
    \end{equation*}
    \begin{equation*}
        \left<
        \begin{tikzpicture}
            \useasboundingbox (-0.07,-0.1) rectangle (1.07,1);
            \draw[rsltnText,ultra thick] (0.5,0) circle (0.5);
    \end{tikzpicture}
        \right> = \left(-t^{1/2} - t^{-1/2}\right) \left<
        \begin{tikzpicture}
            \useasboundingbox (-0.07,-0.1) rectangle (1.07,1);
    \end{tikzpicture}
        \right>
    \end{equation*}
\end{definition}
\end{frame}

\begin{frame}
    \begin{definition}[Writhe]\label{def:positive_and_negative_crossings}
    \begin{figure}[H]
        \centering
        \resizebox{!}{0.1\textwidth}{ \begin{tikzpicture}
            \draw[rsltnText,ultra thick] (0,1) .. controls +(1,0) and +(-1,0) .. (2,0);
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (0,0) .. controls +(1,0) and +(-1,0) .. (2,1);
        \end{tikzpicture}
        \qquad 
        \begin{tikzpicture}
            \draw[rsltnText,ultra thick] (0,0) .. controls +(1,0) and +(-1,0) .. (2,1);
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (0,1) .. controls +(1,0) and +(-1,0) .. (2,0);
        \end{tikzpicture} }
        \caption{Positive crossing (left) and negative crossing (right)}
    \end{figure}
    The \emph{writhe} $\Wr(L)$ is \# pos. crossings $-$ \# neg. crossings.
\end{definition}
    \begin{definition}[Jones Polynomial]\label{def:jones_polynomial}
    Let $t \in \C^{\times}$. The \emph{Jones polynomial} of a link $L$ is
    \begin{equation*}
        V(L,t) = \frac{\left<L\right>_{K}}{-\left(t^{1/2} + t^{-1/2}\right)t^{3\Wr(L)/4}}.
    \end{equation*}
\end{definition}
\end{frame}

