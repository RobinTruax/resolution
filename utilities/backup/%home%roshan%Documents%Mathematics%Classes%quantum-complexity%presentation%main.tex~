\begin{frame}
    \begin{definition}[Reduced Skein Space $\color{rsltnEnvDefinition!70!black}X(2n)$]\label{def:reduced_skein_space_x2n}
        Consider the set of ``tangles" in the right (resp. left) half-plane with endpoints at $1,2,\ldots,2n$ on the vertical number line.
    \begin{figure}[H]
        \centering
        \resizebox{!}{0.25\textwidth}{\begin{tikzpicture}
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (-1,3) arc (90:270:0.5);
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (-1,2.5) arc (90:270:1.25);
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (-1,3.5) arc (90:270:1.5);
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (-1,1.5) arc (90:270:0.25);

            \draw[rsltnEnvTheorem,ultra thick,dashed] (0,-0.5)--(0,4);
            \draw[rsltnText,ultra thick] (-1,0)  --(0,0);
            \draw[rsltnText,ultra thick] (-1,0.5)--(0,0.5);
            \draw[rsltnText,ultra thick] (-1,1)  --(0,1);
            \draw[rsltnText,ultra thick] (-1,1.5)--(0,1.5);
            \draw[rsltnText,ultra thick] (-1,2)  --(0,2);
            \draw[rsltnText,ultra thick] (-1,2.5)--(0,2.5);
            \draw[rsltnText,ultra thick] (-1,3)  --(0,3);
            \draw[rsltnText,ultra thick] (-1,3.5)--(0,3.5);
        \end{tikzpicture}} \quad 
        \resizebox{!}{0.25\textwidth}{\begin{tikzpicture}
            \draw[rsltnPage,double=rsltnText,double distance=1.6pt,line width=5pt] (1,1.5) arc (-90:90:1);
