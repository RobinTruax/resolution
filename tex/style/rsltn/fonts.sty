% --------------------------------- Packages -----------------------------------


\RequirePackage{mathrsfs} % script font
\RequirePackage{bm}       % bold font

% ---------------------------------- Fonts -------------------------------------


% General Font Shortcuts
\newcommand{\bb}[1]{\mathbb{#1}}       % Blackboard
\renewcommand{\cal}[1]{\mathcal{#1}}   % Calligraphic
\newcommand{\scr}[1]{\mathscr{#1}}     % Script
\renewcommand{\frak}[1]{\mathfrak{#1}} % Fraktur
\newcommand{\msf}[1]{\mathsf{#1}}      % Sans Serif

% Specific Blackboard Font Shortcuts
\newcommand{\A}{\mathbb{A}}   % Affine
\newcommand{\C}{\mathbb{C}}   % Complexes
\newcommand{\F}{\mathbb{F}}   % Field
\newcommand{\N}{\mathbb{N}}   % Naturals
\renewcommand{\P}{\mathbb{P}} % Probability
\newcommand{\Q}{\mathbb{Q}}   % Rationals
\newcommand{\R}{\mathbb{R}}   % Reals
\newcommand{\Z}{\mathbb{Z}}   % Integers

