\mode<presentation>

% Options
% size = \tiny , \scriptsize, \footnotesize, \small, \normalsize, \large, \Large, \LARGE, \huge, \Huge
% family = \rmfamily, \sffamily, \ttfamily, \mathrm
% shape = \upshape, \slshape, \itshape, \scshape
% series = \bf

% Title and headers
\setbeamerfont*{title}{family=\rmfamily,shape=\scshape,size=\Large}
\setbeamerfont*{subtitle}{family=\rmfamily,shape=\scshape,size=\large}
\setbeamerfont*{author}{family=\sffamily, size = \normalsize}
\setbeamerfont*{institute}{family=\sffamily, size = \footnotesize}
\setbeamerfont*{date}{family=\sffamily, size = \normalsize}
\setbeamerfont*{part name}{family=\sffamily, size = \Large}
\setbeamerfont*{section name}{family=\sffamily, size = \Large}
\setbeamerfont*{subsection name}{family=\sffamily, size = \Large}

% Table of contents
\setbeamerfont*{section in toc}{family=\sffamily, series = \bf}
\setbeamerfont*{subsection in toc}{family=\sffamily}
\setbeamerfont*{subsubsection in toc}{family=\sffamily}

% Structural elements
\setbeamerfont*{frametitle}{family = \rmfamily, size = \Large, series = \bf}
\setbeamerfont*{framesubtitle}{family = \rmfamily, size = \normalsize}
\setbeamerfont*{page number in head/foot}{family = \sffamily}
\setbeamerfont*{mini frame}{family = \sffamily}
\setbeamerfont*{section in head/foot}{family = \sffamily}
\setbeamerfont*{subsection in head/foot}{family = \sffamily}
\setbeamerfont*{subsubsection in head/foot}{family = \sffamily}

\mode<all>
