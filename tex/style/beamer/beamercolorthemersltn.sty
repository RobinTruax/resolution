    \setbeamercolor*{block body example}{fg=TForeground, bg=TBackground}
    
    % Theorem environments
    \addtobeamertemplate{qed symbol}{\color{TForeground}}

    % Figures and tables
    \setbeamercolor*{caption}{fg=TForeground}
    \setbeamercolor*{caption name}{fg=TForeground}
    
    % Verse, quotations, and quotes
    \setbeamercolor*{verse}{fg=TForeground}
    \setbeamercolor*{quotation}{fg=TForeground}

    % Footnotes
    \setbeamercolor*{footnote}{fg=TForeground}
    \setbeamercolor*{footnote mark}{fg=TForeground}
