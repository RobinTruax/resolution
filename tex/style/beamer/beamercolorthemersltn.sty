\mode<presentation>

% Structure of the presentation
    % Global definitions
    \setbeamercolor*{normal text}{fg=TForeground}
    \setbeamercolor*{separation line}{fg=TForeground}
    \setbeamercolor*{fine separation line}{fg=TForeground}
    
    % Background
    \setbeamercolor*{background canvas}{bg=TBackground}
    \setbeamercolor*{background}{bg=TBackground}
    
    % Title page and headers
    \setbeamercolor*{title}{fg=TForeground}
    \setbeamercolor*{subtitle}{fg=TForeground}
    \setbeamercolor*{author}{fg=TForeground}
    \setbeamercolor*{institute}{fg=TForeground}
    \setbeamercolor*{date}{fg=TForeground}
    \setbeamercolor*{part name}{fg=TForeground!70!black}
    \setbeamercolor*{section name}{fg=TForeground!70!black}
    \setbeamercolor*{subsection name}{fg=TForeground!70!black}
    
    % Table of Contents
    \setbeamercolor*{section in toc}{fg=TForeground}
    \setbeamercolor*{subsection in toc}{fg=TForeground}
    \setbeamercolor*{subsubsection in toc}{fg=TForeground}
    
    \setbeamercolor*{section number projection}{fg=TForeground!70!black}
    \setbeamercolor*{subsection number projection}{fg=TForeground!70!black}
    \setbeamercolor*{subsubsection number projection}{fg=TForeground!70!black}
    
    % Bibliography
    \setbeamercolor*{bibliography entry author}{fg=TGrey!70!black}
    \setbeamercolor*{bibliography entry title}{fg=TGrey!70!black}
    \setbeamercolor*{bibliography entry location}{fg=TGrey!70!black}
    \setbeamercolor*{bibliography entry note}{fg=TGrey!70!black}
    \setbeamercolor*{bibliography item}{fg=TGrey!70!black}
    
    % Note page
    \setbeamercolor*{note page}{fg=TGrey!70!black}
    \setbeamercolor*{note title}{fg=TGrey!70!black}
    
    % Structure of a frame
    \setbeamercolor*{headline}{fg=TForeground}
    \setbeamercolor*{footline}{fg=TForeground}
    \setbeamercolor*{page number in head/foot}{fg=TForeground}
    \setbeamercolor*{sidebar}{fg=TForeground}
    \setbeamercolor*{section in sidebar}{fg=TForeground}
    \setbeamercolor*{subsection in sidebar}{fg=TForeground}
    \setbeamercolor*{subsubsection in sidebar}{fg=TForeground}
    \setbeamercolor*{title in sidebar}{fg=TForeground}
    \setbeamercolor*{author in sidebar}{fg=TForeground}
    \setbeamercolor*{institute in sidebar}{fg=TForeground}
    \setbeamercolor*{date in sidebar}{fg=TForeground}

% Structure of a frame
    % Headlines and footlines
    \setbeamercolor*{headline}{fg=TForeground}
    \setbeamercolor*{footline}{fg=TForeground}
    \setbeamercolor*{page number in head/foot}{fg=TForeground}
    \setbeamercolor*{separation line}{fg=TForeground}
    \setbeamercolor*{author in head/foot}{fg=TForeground}
    \setbeamercolor*{title in head/foot}{fg=TForeground}
    \setbeamercolor*{title in head/foot}{fg=TForeground}
    \setbeamercolor*{date in head/foot}{fg=TForeground}
    \setbeamercolor*{institute in head/foot}{fg=TForeground}
    \setbeamercolor*{section in head/foot}{fg=TForeground}
    \setbeamercolor*{subsection in head/foot}{fg=TForeground}
    
    % Sidebars
    \setbeamercolor*{sidebar}{fg=TForeground}
    \setbeamercolor*{section in sidebar}{fg=TForeground}
    \setbeamercolor*{section in sidebar shaded}{fg=TForeground}
    \setbeamercolor*{subsection in sidebar}{fg=TForeground}
    \setbeamercolor*{subsection in side shaded}{fg=TForeground}
    \setbeamercolor*{title in sidebar}{fg=TForeground}
    \setbeamercolor*{author in sidebar}{fg=TForeground}
    \setbeamercolor*{institute in sidebar}{fg=TForeground}
    \setbeamercolor*{date in sidebar}{fg=TForeground}
    
    % Navigation bars
    \setbeamercolor*{mini frames}{fg=TForeground}
    \setbeamercolor*{mini frame}{fg=TForeground}
    
    % Navigation symbols
    \setbeamercolor*{navigation symbols}{fg=TForeground}
    \setbeamercolor*{navigation symbols dimmed}{fg=TForeground}

% Elements of a frame
    % Frame title
    \setbeamercolor*{frametitle}{fg=TForeground}
    
    % Abstract
    \setbeamercolor*{abstract}{fg=TForeground!70!black}
    
    % Hyperlinks and buttons
    \setbeamercolor*{button}{fg=TForeground!70!black}
    \setbeamercolor*{button border}{fg=TForeground!70!black}
    
    % Lists
    \setbeamercolor*{item}{fg=environmentColor!70!black}
    
    % Highlighting
    \setbeamercolor*{structure}{fg=TForeground!70!black}
    \setbeamercolor*{alterted text}{fg=TForeground!70!black}
    \setbeamercolor*{example text}{fg=TForeground!70!black}
    
    % Blocks environments
    \setbeamercolor*{block title}{bg=TBackground}
    \setbeamercolor*{block body}{fg=TForeground, bg=TBackground}
