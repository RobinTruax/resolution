\RequirePackage[usenames,dvipsnames,svgnames]{xcolor}

% Code
\definecolor{TRed}{HTML}{f84a4d}
\definecolor{TOrange}{HTML}{ff9e64}
\definecolor{TYellow}{HTML}{e0af68}
\definecolor{TGreen}{HTML}{9ece6a}
\definecolor{TAqua}{HTML}{2ac3de}
\definecolor{TBlue}{HTML}{7aa2f7}
\definecolor{TPurple}{HTML}{bb9af7}
\definecolor{TIndigo}{HTML}{565f89}
\definecolor{TGrey}{HTML}{808080}

% Base
\definecolor{rsltnPage}{HTML}{ffffff}
\definecolor{rsltnText}{HTML}{000000}

% Environments
\colorlet{rsltnDefinition}{TRed}
\colorlet{rsltnTheorem}{TIndigo}
\colorlet{rsltnProposition}{TPurple}
\colorlet{rsltnLemma}{TPurple}
\colorlet{rsltnCorollary}{TBlue}
\colorlet{rsltnExample}{TAqua}
\colorlet{rsltnConjecture}{TAqua}
\colorlet{rsltnProblem}{TRed}
\colorlet{rsltnSolution}{TRed}

% Code
\colorlet{rsltnComment}{TIndigo}
\colorlet{rsltnKeyword}{TPurple}
\colorlet{rsltnString}{TGreen}
\colorlet{rsltnNumbers}{TGrey}
\colorlet{rsltnLinebreak}{TAqua}

% Reset page and text color
\color{rsltnText}
\pagecolor{rsltnPage}

