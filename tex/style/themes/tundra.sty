\RequirePackage{xcolor}

% Theme Colors
\definecolor{TBackground}{HTML}{111827}
\definecolor{TForeground}{HTML}{f2f4f4}
\definecolor{TRed}{HTML}{fca5a4}
\definecolor{TOrange}{HTML}{f3bb99}
\definecolor{TGreen}{HTML}{b2e4ad}
\definecolor{TBlue}{HTML}{bbe6fd}
\definecolor{TPink}{HTML}{f1c3c9}
\definecolor{TPurple}{HTML}{ddd7fe}
\definecolor{TGrey}{HTML}{9ca2ae}

% Base
\colorlet{rsltnPage}{TBackground}
\colorlet{rsltnText}{TForeground}

% Environments
\colorlet{rsltnDefinition}{TGreen}
\colorlet{rsltnTheorem}{TRed}
\colorlet{rsltnProposition}{TPurple}
\colorlet{rsltnLemma}{TPurple}
\colorlet{rsltnCorollary}{TBlue}
\colorlet{rsltnExample}{TOrange}
\colorlet{rsltnConjecture}{TPink}
\colorlet{rsltnProblem}{TRed}
\colorlet{rsltnSolution}{TRed}

% Code
\colorlet{rsltnComment}{TGrey}
\colorlet{rsltnKeyword}{TPurple}
\colorlet{rsltnString}{TGreen}
\colorlet{rsltnNumbers}{TGrey}
\colorlet{rsltnLinebreak}{TRed}

% Reset page and text color
\color{rsltnText}
\pagecolor{rsltnPage}

